#!/usr/bin/env python

import sys, os

def setPythonEnv():
    binDir = os.path.abspath(os.path.normpath(os.path.dirname(sys.argv[0])))
    srcDir = os.path.join(os.path.dirname(binDir), 'src' )
    pluginDir = os.path.join(os.path.dirname(binDir), 'plugin' )

    sys.path.insert(0, srcDir)
    sys.path.insert(0, pluginDir)

def startProgram():
    from JobMgrSys.Core import Program
    b = Program(sys.argv[1:])
    b.run()

def main():
    setPythonEnv()
    startProgram()

if __name__ == '__main__':
    main()
